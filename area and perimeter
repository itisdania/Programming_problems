/* task 1a and 1b */ 
/*area and perimeter of a rectangle*/
  int main() {
  int height;
    int width;
    int perimeter;
    int area;
    printf("Enter height: ");
    scanf("%d",&height);
    printf("Enter width: ");
    scanf("%d",&width);
    
    perimeter = 2*height + 2* width;
    area = height* width;
    
    
    printf("Perimeter is %d\n",perimeter);
    printf("Area is %d\n",area);
    return 0;}
    
    
    
    /* area and perimeter(circumference) */
    int main() {
    double radius;
    double circumference;
    double area;
    double pi = 3.1415;
    printf("Enter radius: ");
    scanf("%lf",&radius);

    
    circumference = 2*pi*radius;
    area = pi*radius*radius;
    
    
    
    printf("circumference is %lf\n",circumference);
    printf("Area is %lf\n",area);
    
    
    return 0;
}
